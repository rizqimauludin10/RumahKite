<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/texticon"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perbaikan / Instalasi"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 130.000"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/hr"/>

            <TextView
                android:id="@+id/hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/hr"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/captdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Pengerjaan"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/form_input"
            android:layout_below="@id/captdate"
            android:hint="Tanggal"
            android:focusable="false"
            android:ems="9"
            android:maxLines="1"
            android:textSize="14sp"
            android:padding="10dp"/>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/searchicon"
                android:layout_gravity="right"
                android:layout_marginTop="40dp"/>

        </FrameLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:text="Deskripsi"/>

        <EditText
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/form_input"
            android:hint="Line"
            android:textAlignment="gravity"
            android:inputType="textMultiLine"
            android:textSize="14sp"
            android:ems="18"
            android:padding="10dp"/>
    </LinearLayout>


    </LinearLayout>